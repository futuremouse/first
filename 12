func average(_ arr:[Int]) -> Double {
    let sum = arr.reduce(0,+)
    return Double(sum) / Double(arr.count)
}

func solution(_ arr: [Int]) -> Double {
    let result = average(arr)
    return result
}

let arr1 = [1, 2, 3, 4]
let result1 = solution(arr1)

let arr2 = [5, 5]
let result2 = solution(arr2)

print("arr\tresult")
print("\(arr1)\t\(result1)")
print("\(arr2)\t\(result2)")
