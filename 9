func solution(_ n: Int) -> Int {
    var sum = 0
    if (0 < n && n <= 1000) {
        for i in stride(from: 0, through: n, by: 2) {
            sum += i
        }
        return sum
    } else {
        return 0
    }
}

let n1 = 10
let result1 = solution(n1)

let n2 = 4
let result2 = solution(n2)

print("n\tresult")
print("\(n1)\t\(result1)")
print("\(n2)\t\(result2)")
